{% comment %}
  Section: About Hero
  Hero section for about page
{% endcomment %}

<div class="page-width">
  <div class="grid">
    {% if section.settings.image != blank %}
      <div class="grid__item large--one-half medium--one-half">
        <img src="{{ section.settings.image | img_url: '800x600' }}" alt="{{ section.settings.image.alt | default: section.settings.title }}" loading="lazy" style="width: 100%; height: auto;">
      </div>
    {% endif %}
    
    <div class="grid__item {% if section.settings.image != blank %}large--one-half medium--one-half{% else %}{% endif %} {% unless section.settings.image %}text-center{% endunless %}">
      {% if section.settings.title != blank %}
        <h1 class="h1">{{ section.settings.title }}</h1>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <h2 class="h2">{{ section.settings.subtitle }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="rte" style="margin-bottom: 2rem;">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn--primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Godspeed"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Your trusted e-bike partner since 2015"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We're passionate about making sustainable transportation accessible to everyone. Our carefully curated selection of e-bikes combines cutting-edge technology with Swiss quality and design.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Our Story"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "About Hero",
      "category": "About"
    }
  ]
}
{% endschema %}