{% comment %}
  Section: Store Locations Map
  Interactive map with all store locations
{% endcomment %}

<div class="store-locations-map-section">
  <div class="page-width">
    <div class="section-header text-center">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="locations-map-container">
      <div id="locations-map" class="locations-map" style="height: {{ section.settings.map_height }}px;"></div>
    </div>
  </div>
</div>

<script>
  let map;
  let markers = [];

  const locations = [
    {% for block in section.blocks %}
      {% if block.settings.latitude != blank and block.settings.longitude != blank %}
        {
          name: "{{ block.settings.name | escape }}",
          address: "{{ block.settings.address | escape }}",
          phone: "{{ block.settings.phone | escape }}",
          email: "{{ block.settings.email | escape }}",
          hours: "{{ block.settings.hours | escape }}",
          lat: {{ block.settings.latitude }},
          lng: {{ block.settings.longitude }}
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ];

  function initMap() {
    // Center map on Switzerland
    const center = { lat: 46.8182, lng: 8.2275 };
    
    map = new google.maps.Map(document.getElementById("locations-map"), {
      zoom: 8,
      center: center,
      styles: [
        {
          "featureType": "all",
          "elementType": "geometry.fill",
          "stylers": [{"weight": "2.00"}]
        },
        {
          "featureType": "all",
          "elementType": "geometry.stroke",
          "stylers": [{"color": "#9c9c9c"}]
        }
      ]
    });

    // Add markers for each location
    locations.forEach((location, index) => {
      const marker = new google.maps.Marker({
        position: { lat: location.lat, lng: location.lng },
        map: map,
        title: location.name,
        icon: {
          url: 'data:image/svg+xml;charset=UTF-8,' + encodeURIComponent(`
            <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
              <circle cx="16" cy="16" r="12" fill="#E1306C" stroke="#fff" stroke-width="2"/>
              <text x="16" y="20" text-anchor="middle" fill="white" font-size="12" font-weight="bold">G</text>
            </svg>
          `),
          scaledSize: new google.maps.Size(32, 32)
        }
      });

      const infoWindow = new google.maps.InfoWindow({
        content: `
          <div class="map-info-window">
            <h3>${location.name}</h3>
            <p><strong>Address:</strong><br>${location.address}</p>
            ${location.phone ? `<p><strong>Phone:</strong> <a href="tel:${location.phone}">${location.phone}</a></p>` : ''}
            ${location.email ? `<p><strong>Email:</strong> <a href="mailto:${location.email}">${location.email}</a></p>` : ''}
            ${location.hours ? `<p><strong>Hours:</strong><br>${location.hours}</p>` : ''}
            <a href="https://maps.google.com/maps?daddr=${location.lat},${location.lng}" target="_blank" class="directions-link">Get Directions</a>
          </div>
        `
      });

      marker.addListener('click', () => {
        // Close all other info windows
        markers.forEach(m => {
          if (m.infoWindow) {
            m.infoWindow.close();
          }
        });
        infoWindow.open(map, marker);
      });

      markers.push({ marker, infoWindow });
    });

    // Fit map to show all markers
    if (locations.length > 0) {
      const bounds = new google.maps.LatLngBounds();
      locations.forEach(location => {
        bounds.extend({ lat: location.lat, lng: location.lng });
      });
      map.fitBounds(bounds);
    }
  }

  // Load Google Maps API
  function loadGoogleMaps() {
    if (window.google && window.google.maps) {
      initMap();
      return;
    }

    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key={{ section.settings.google_maps_api_key }}&callback=initMap`;
    script.async = true;
    script.defer = true;
    document.head.appendChild(script);
  }

  document.addEventListener('DOMContentLoaded', loadGoogleMaps);
</script>

<style>
  .store-locations-map-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .locations-map-container {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .locations-map {
    width: 100%;
    border: none;
  }

  .map-info-window {
    max-width: 250px;
    font-family: inherit;
  }

  .map-info-window h3 {
    margin: 0 0 10px 0;
    color: #2c2c2c;
    font-size: 1.1rem;
  }

  .map-info-window p {
    margin: 5px 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .directions-link {
    display: inline-block;
    background: #E1306C;
    color: white;
    padding: 8px 12px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.9rem;
    margin-top: 10px;
    transition: background 0.3s ease;
  }

  .directions-link:hover {
    background: #C13584;
    color: white;
  }

  @media (max-width: 768px) {
    .store-locations-map-section {
      padding: {{ section.settings.padding_top | divided_by: 2 }}px 0 {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
    
    .locations-map {
      height: 300px !important;
    }
  }
</style>

