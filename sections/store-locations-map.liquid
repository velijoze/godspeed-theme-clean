{% comment %}
  Section: Store Locations Map
  Interactive map with all store locations
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <header class="section-header text-center">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div id="locations-map" style="height: {{ section.settings.map_height | default: 400 }}px; width: 100%; border: 1px solid #ddd;"></div>
  </div>
</section>

<script>
  let map;
  let markers = [];

  const locations = [
    {% for block in section.blocks %}
      {% if block.settings.latitude != blank and block.settings.longitude != blank %}
        {
          name: "{{ block.settings.name | escape }}",
          address: "{{ block.settings.address | escape }}",
          phone: "{{ block.settings.phone | escape }}",
          email: "{{ block.settings.email | escape }}",
          hours: "{{ block.settings.hours | escape }}",
          lat: {{ block.settings.latitude }},
          lng: {{ block.settings.longitude }}
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ];

  function initMap() {
    // Center map on Switzerland
    const center = { lat: 46.8182, lng: 8.2275 };
    
    map = new google.maps.Map(document.getElementById("locations-map"), {
      zoom: 8,
      center: center
    });

    // Add markers for each location
    locations.forEach((location, index) => {
      const marker = new google.maps.Marker({
        position: { lat: location.lat, lng: location.lng },
        map: map,
        title: location.name
      });

      const infoWindow = new google.maps.InfoWindow({
        content: `
          <div style="max-width: 250px;">
            <h3 style="margin: 0 0 10px 0;">${location.name}</h3>
            <p><strong>Address:</strong><br>${location.address}</p>
            ${location.phone ? `<p><strong>Phone:</strong> <a href="tel:${location.phone}">${location.phone}</a></p>` : ''}
            ${location.email ? `<p><strong>Email:</strong> <a href="mailto:${location.email}">${location.email}</a></p>` : ''}
            ${location.hours ? `<p><strong>Hours:</strong><br>${location.hours}</p>` : ''}
            <a href="https://maps.google.com/maps?daddr=${location.lat},${location.lng}" target="_blank" class="btn btn--small">Get Directions</a>
          </div>
        `
      });

      marker.addListener('click', () => {
        // Close all other info windows
        markers.forEach(m => {
          if (m.infoWindow) {
            m.infoWindow.close();
          }
        });
        infoWindow.open(map, marker);
      });

      markers.push({ marker, infoWindow });
    });

    // Fit map to show all markers
    if (locations.length > 0) {
      const bounds = new google.maps.LatLngBounds();
      locations.forEach(location => {
        bounds.extend({ lat: location.lat, lng: location.lng });
      });
      map.fitBounds(bounds);
    }
  }

  // Load Google Maps API
  function loadGoogleMaps() {
    if (window.google && window.google.maps) {
      initMap();
      return;
    }

    {% if section.settings.google_maps_api_key != blank %}
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key={{ section.settings.google_maps_api_key }}&callback=initMap`;
    script.async = true;
    script.defer = true;
    document.head.appendChild(script);
    {% else %}
    document.getElementById('locations-map').innerHTML = '<p style="text-align: center; padding: 50px;">Google Maps API key required. Please add your API key in theme settings.</p>';
    {% endif %}
  }

  document.addEventListener('DOMContentLoaded', loadGoogleMaps);
</script>

{% schema %}
{
  "name": "Store Locations Map",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Locations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Visit one of our stores to experience our e-bikes firsthand"
    },
    {
      "type": "text",
      "id": "google_maps_api_key",
      "label": "Google Maps API Key",
      "info": "Required for maps to work. Get your key from Google Cloud Console."
    },
    {
      "type": "range",
      "id": "map_height",
      "label": "Map Height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Store Location",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Store Name",
          "default": "Godspeed Store"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "Street Address, City, ZIP"
        },
        {
          "type": "text",
          "id": "latitude",
          "label": "Latitude",
          "info": "Get coordinates from Google Maps"
        },
        {
          "type": "text",
          "id": "longitude",
          "label": "Longitude",
          "info": "Get coordinates from Google Maps"
        },
        {
          "type": "tel",
          "id": "phone",
          "label": "Phone Number"
        },
        {
          "type": "email",
          "id": "email",
          "label": "Email Address"
        },
        {
          "type": "textarea",
          "id": "hours",
          "label": "Opening Hours",
          "default": "Mon-Fri: 9:00-18:00<br>Sat: 9:00-17:00<br>Sun: Closed"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Store Locations Map",
      "category": "Store Information"
    }
  ]
}
{% endschema %}