<div class="sustainability-section" data-section-id="{{ section.id }}" data-section-type="sustainability">
  <div class="wrapper">
    <div class="section-header text-center">
      <h2 class="section-header__title">{{ section.settings.title | default: 'SUSTAINABILITY' }}</h2>
      <div class="section-header__divider"></div>
      <p class="section-header__subtitle">{{ section.settings.subtitle | default: 'Committed to a greener future through eco-friendly practices and sustainable solutions.' }}</p>
    </div>
    
    <div class="sustainability-grid">
      <!-- Eco-Friendly Materials -->
      <div class="sustainability-item">
        <div class="sustainability-icon">
          <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M32 4C16.536 4 4 16.536 4 32C4 47.464 16.536 60 32 60C47.464 60 60 47.464 60 32C60 16.536 47.464 4 32 4ZM32 56C18.745 56 8 45.255 8 32C8 18.745 18.745 8 32 8C45.255 8 56 18.745 56 32C56 45.255 45.255 56 32 56Z" fill="#4CAF50"/>
