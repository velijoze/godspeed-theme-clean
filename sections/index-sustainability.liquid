<div class="sustainability-section" data-section-id="{{ section.id }}" data-section-type="sustainability">
  <div class="wrapper">
    <div class="section-header text-center">
      <h2 class="section-header__title">{{ section.settings.title | default: 'ECO-FRIENDLY TRANSPORT' }}</h2>
      <div class="section-header__divider"></div>
      <p class="section-header__subtitle">{{ section.settings.subtitle | default: 'Join the green revolution with our sustainable e-bike solutions.' }}</p>
    </div>
    
    <div class="sustainability-grid">
      <!-- Green Commuting -->
      <div class="sustainability-item">
        <div class="sustainability-icon">
          <span class="icon icon-leaf"></span>
        </div>
        <h3 class="sustainability-title">{{ section.settings.commuting_title | default: 'Green Commuting' }}</h3>
        <p class="sustainability-description">{{ section.settings.commuting_description | default: 'Reduce your carbon footprint by choosing e-bikes for daily transportation.' }}</p>
      </div>
      
      <!-- Energy Efficient -->
      <div class="sustainability-item">
        <div class="sustainability-icon">
          <span class="icon icon-bolt"></span>
        </div>
        <h3 class="sustainability-title">{{ section.settings.energy_title | default: 'Energy Efficient' }}</h3>
        <p class="sustainability-description">{{ section.settings.energy_description | default: 'Our e-bikes use minimal electricity compared to cars and public transport.' }}</p>
      </div>
      
      <!-- Sustainable Materials -->
      <div class="sustainability-item">
        <div class="sustainability-icon">
          <span class="icon icon-recycle"></span>
        </div>
        <h3 class="sustainability-title">{{ section.settings.materials_title | default: 'Sustainable Materials' }}</h3>
        <p class="sustainability-description">{{ section.settings.materials_description | default: 'Built with eco-friendly components and recyclable materials.' }}</p>
      </div>
    </div>
    
    <!-- Call to Action -->
    <div class="sustainability-cta">
      <h3 class="cta-title">{{ section.settings.cta_title | default: 'Choose Sustainable Transportation' }}</h3>
      <p class="cta-description">{{ section.settings.cta_description | default: 'Every ride contributes to a cleaner environment and healthier cities.' }}</p>
      {% if section.settings.cta_button_text and section.settings.cta_button_link %}
        <a href="{{ section.settings.cta_button_link }}" class="btn btn--primary btn--large">
          {{ section.settings.cta_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .sustainability-section {
    padding: 2.5rem 0;
    background: #f8f9fa;
  }
  
  .section-header__divider {
    width: 60px;
    height: 2px;
    background: #4CAF50;
    margin: 1rem auto;
  }
  
  .section-header__subtitle {
    font-size: 1rem;
    color: #666;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.5;
  }
  
  .sustainability-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin: 2rem 0;
  }
  
  .sustainability-item {
    text-align: center;
    padding: 1.5rem 1rem;
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .sustainability-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  }
  
  .sustainability-icon {
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
  }
  
  .sustainability-icon .icon {
    font-size: 2rem;
    color: #4CAF50;
  }
  
  .sustainability-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c2c2c;
    margin-bottom: 0.75rem;
  }
  
  .sustainability-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.4;
    margin: 0;
  }
  
  .sustainability-cta {
    text-align: center;
    margin-top: 2rem;
    padding: 1.5rem;
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  
  .cta-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #2c2c2c;
    margin-bottom: 0.75rem;
  }
  
  .cta-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 1rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .btn--large {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .btn--primary {
    background: #4CAF50;
    color: #ffffff;
    border: 2px solid #4CAF50;
  }
  
  .btn--primary:hover {
    background: #45a049;
    border-color: #45a049;
    transform: translateY(-1px);
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .sustainability-section {
      padding: 2rem 0;
    }
    
    .sustainability-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      margin: 1.5rem 0;
    }
    
    .sustainability-item {
      padding: 1rem;
    }
    
    .sustainability-cta {
      margin-top: 1.5rem;
      padding: 1rem;
    }
    
    .cta-title {
      font-size: 1.2rem;
    }
    
    .cta-description {
      font-size: 0.9rem;
    }
  }
</style>

