<section class="section-spacing" data-section-id="{{ section.id }}" data-section-type="sustainability">
  <div class="page-width">
    <header class="section-header text-center">
      <h2 class="section-header__title">{{ section.settings.title | default: 'ECO-FRIENDLY TRANSPORT' }}</h2>
      <p>{{ section.settings.subtitle | default: 'Join the green revolution with our sustainable e-bike solutions.' }}</p>
    </header>
    
    <div class="grid grid-uniform">
      <!-- Green Commuting -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
            </svg>
          </div>
          <h3 class="h5">{{ section.settings.commuting_title | default: 'Green Commuting' }}</h3>
          <p>{{ section.settings.commuting_description | default: 'Reduce your carbon footprint by choosing e-bikes for daily transportation.' }}</p>
        </div>
      </div>
      
      <!-- Energy Efficient -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M11,21H9L13,2H15L11,21Z"/>
            </svg>
          </div>
          <h3 class="h5">{{ section.settings.energy_title | default: 'Energy Efficient' }}</h3>
          <p>{{ section.settings.energy_description | default: 'Our e-bikes use minimal electricity compared to cars and public transport.' }}</p>
        </div>
      </div>
      
      <!-- Sustainable Materials -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19,15.18C19.38,14.54 19.7,13.83 19.86,13.05C20.27,11.47 19.84,9.82 18.54,8.55C18.21,8.22 17.84,7.93 17.44,7.68C17.22,7.5 17.41,7.14 17.68,7.26C19.74,8.05 21.28,10.16 21.1,12.35C20.96,14.94 18.81,17 16.22,17.14C14.67,17.24 13.23,16.77 12.17,15.83L11.67,15.83C10.61,16.77 9.17,17.24 7.62,17.14C5.03,17 2.88,14.94 2.74,12.35C2.56,10.16 4.1,8.05 6.16,7.26C6.43,7.14 6.62,7.5 6.4,7.68C6,7.93 5.63,8.22 5.3,8.55C4,9.82 3.57,11.47 3.98,13.05C4.14,13.83 4.46,14.54 4.84,15.18C5.25,15.18 5.64,15.45 5.64,15.82V16.36C5.64,16.73 5.25,17 4.84,17H4.16C3.75,17 3.36,16.73 3.36,16.36V15.82C3.36,15.45 3.75,15.18 4.16,15.18H4.84M12,11A2,2 0 0,0 10,13A2,2 0 0,0 12,15A2,2 0 0,0 14,13A2,2 0 0,0 12,11Z"/>
            </svg>
          </div>
          <h3 class="h5">{{ section.settings.materials_title | default: 'Sustainable Materials' }}</h3>
          <p>{{ section.settings.materials_description | default: 'Built with eco-friendly components and recyclable materials.' }}</p>
        </div>
      </div>
    </div>
  </div>
</section>


