{% comment %}
  Section: Dashboard Management
  VeloConnect API monitoring
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    <header class="section-header text-center">
      {% if section.settings.title != blank %}
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </header>

    <div id="dashboard-management-{{ section.id }}" class="feature-card">
      <!-- Dashboard management will be initialized here by JavaScript -->
      <div class="text-center">
        <p><em>Loading dashboard...</em></p>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.GodspeedToolkit && window.GodspeedToolkit.DashboardManagement) {
      const dashboard = new window.GodspeedToolkit.DashboardManagement();
      dashboard.init('dashboard-management-{{ section.id }}');
    }
  });
</script>


{% schema %}
{
  "name": "Dashboard Management",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "VeloConnect Dashboard"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Monitor API connections and system status"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Dashboard Management",
      "category": "E-bike Tools"
    }
  ]
}
{% endschema %}