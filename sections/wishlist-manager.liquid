{% comment %}
  Section: Wishlist Manager
  Customer wishlist management with sharing
{% endcomment %}

<div class="wishlist-manager-section page-width">
  <div class="section-header text-center">
    {% if section.settings.title != blank %}
      <h2>{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
    {% endif %}
  </div>

  <div id="wishlist-manager-{{ section.id }}" class="wishlist-manager-container">
    <!-- Wishlist manager will be initialized here by JavaScript -->
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.GodspeedToolkit && window.GodspeedToolkit.WishlistManager) {
      const wishlist = new window.GodspeedToolkit.WishlistManager();
      wishlist.init('wishlist-manager-{{ section.id }}');
    }
  });
</script>

<style>
  .wishlist-manager-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
</style>

{% schema %}
{
  "name": "Wishlist Manager",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "My Wishlist"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Save your favorite e-bikes and share your wishlist with friends"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Wishlist Manager",
      "category": "E-bike Tools"
    }
  ]
}
{% endschema %}