<section class="section-{{ section.id }}-padding {{ section.settings.homepage_color }}" data-section-id="{{ section.id }}" data-section-type="bike-compare">
  <div class="wrapper">
    {% if section.settings.intro != blank %}
      <div class="rte" style="margin-bottom:1.5rem">{{ section.settings.intro }}</div>
    {% endif %}

    {%- render 'bike-comparison-tool', 
        title: section.settings.heading,
        subtitle: section.settings.subheading,
        max_bikes: section.settings.columns,
        show_specs: true,
        show_reviews: false,
        show_availability: true,
        enable_filtering: false,
        ai_insights: false
    -%}
  </div>
</section>

{% schema %}
{
  "name": "E-Bike Comparison",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Eâ€‘Bike Comparison" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Detailed side-by-side analysis" },
    { "type": "richtext", "id": "intro", "label": "Intro text" },
    { "type": "range", "id": "columns", "min": 2, "max": 6, "step": 1, "label": "Maximum bikes to compare", "default": 4 },
    {
      "type": "select",
      "id": "homepage_color",
      "label": "Color scheme",
      "default": "homepage--white",
      "options": [
        { "value": "homepage--white", "label": "White"},
        { "value": "homepage--light", "label": "Light"},
        { "value": "homepage--splash", "label": "Accent"},
        { "value": "homepage--dark", "label": "Dark"}
      ]
    },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "presets": [
    { "name": "E-Bike Comparison", "category": "E-Bike Tools" }
  ]
}
{% endschema %}


