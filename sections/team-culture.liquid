{% comment %}
  Section: Team Culture
  Display team culture, values, and work environment
{% endcomment %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="rte">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'culture_item' %}
        <div class="grid" {{ block.shopify_attributes }} style="margin-bottom: 2rem;">
          {% if block.settings.image != blank %}
            <div class="grid__item large--one-half medium--one-half">
              <img src="{{ block.settings.image | img_url: '600x400' }}" alt="{{ block.settings.title }}" loading="lazy" style="width: 100%; height: 300px; object-fit: cover;">
            </div>
          {% endif %}
          
          <div class="grid__item {% if block.settings.image != blank %}large--one-half medium--one-half{% else %}{% endif %}">
            {% if block.settings.icon != blank %}
              <div style="font-size: 2.5rem; margin-bottom: 1rem;">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="h3">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p style="font-size: 1.1rem; line-height: 1.6; margin-bottom: 1.5rem;">{{ block.settings.description }}</p>
            {% endif %}
            
            {% if block.settings.quote != blank %}
              <blockquote style="background: #f8f9fa; padding: 1.5rem; border-left: 4px solid #333; font-style: italic; margin: 0;">
                "{{ block.settings.quote }}"
                {% if block.settings.quote_author != blank %}
                  <cite style="display: block; margin-top: 0.5rem; font-weight: 600; font-style: normal; font-size: 0.9rem;">‚Äî {{ block.settings.quote_author }}</cite>
                {% endif %}
              </blockquote>
            {% endif %}
          </div>
        </div>

      {% when 'team_values' %}
        <div {{ block.shopify_attributes }} style="margin-bottom: 2rem;">
          {% if block.settings.title != blank %}
            <div class="text-center">
              <h3 class="h3">{{ block.settings.title }}</h3>
            </div>
          {% endif %}
          
          <div class="grid">
            {% if block.settings.value_1 != blank %}
              <div class="grid__item large--one-quarter medium--one-half">
                <div style="display: flex; align-items: flex-start; gap: 1rem;">
                  <div style="font-size: 2rem; flex-shrink: 0;">{{ block.settings.value_1_icon | default: "üí°" }}</div>
                  <div>
                    <strong style="display: block; font-size: 1rem; margin-bottom: 0.5rem;">{{ block.settings.value_1 }}</strong>
                    {% if block.settings.value_1_desc != blank %}
                      <p style="font-size: 0.9rem; line-height: 1.5; margin: 0;">{{ block.settings.value_1_desc }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
            
            {% if block.settings.value_2 != blank %}
              <div class="grid__item large--one-quarter medium--one-half">
                <div style="display: flex; align-items: flex-start; gap: 1rem;">
                  <div style="font-size: 2rem; flex-shrink: 0;">{{ block.settings.value_2_icon | default: "ü§ù" }}</div>
                  <div>
                    <strong style="display: block; font-size: 1rem; margin-bottom: 0.5rem;">{{ block.settings.value_2 }}</strong>
                    {% if block.settings.value_2_desc != blank %}
                      <p style="font-size: 0.9rem; line-height: 1.5; margin: 0;">{{ block.settings.value_2_desc }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
            
            {% if block.settings.value_3 != blank %}
              <div class="grid__item large--one-quarter medium--one-half">
                <div style="display: flex; align-items: flex-start; gap: 1rem;">
                  <div style="font-size: 2rem; flex-shrink: 0;">{{ block.settings.value_3_icon | default: "üåü" }}</div>
                  <div>
                    <strong style="display: block; font-size: 1rem; margin-bottom: 0.5rem;">{{ block.settings.value_3 }}</strong>
                    {% if block.settings.value_3_desc != blank %}
                      <p style="font-size: 0.9rem; line-height: 1.5; margin: 0;">{{ block.settings.value_3_desc }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
            
            {% if block.settings.value_4 != blank %}
              <div class="grid__item large--one-quarter medium--one-half">
                <div style="display: flex; align-items: flex-start; gap: 1rem;">
                  <div style="font-size: 2rem; flex-shrink: 0;">{{ block.settings.value_4_icon | default: "üöÄ" }}</div>
                  <div>
                    <strong style="display: block; font-size: 1rem; margin-bottom: 0.5rem;">{{ block.settings.value_4 }}</strong>
                    {% if block.settings.value_4_desc != blank %}
                      <p style="font-size: 0.9rem; line-height: 1.5; margin: 0;">{{ block.settings.value_4_desc }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
    {% endcase %}
  {% endfor %}

  {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
    <div class="text-center" style="margin-top: 3rem;">
      <a href="{{ section.settings.cta_link }}" class="btn btn--primary">
        {{ section.settings.cta_text }}
      </a>
    </div>
  {% endif %}
</div>


