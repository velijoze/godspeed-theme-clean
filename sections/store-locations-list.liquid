{% comment %}
  Section: Store Locations List
  List view of all store locations with details
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <header class="section-header text-center">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div class="grid grid-uniform">
      {% for block in section.blocks %}
        <div class="grid__item large--one-half medium--one-half" {{ block.shopify_attributes }}>
          <div class="feature-card">
            <h3 class="h4">
              {{ block.settings.name }}
              {% if block.settings.featured %}
                <span class="label label--success">Featured</span>
              {% endif %}
            </h3>

            {% if block.settings.address != blank %}
              <p><strong>üìç Address:</strong><br>{{ block.settings.address | newline_to_br }}</p>
            {% endif %}

            {% if block.settings.phone != blank %}
              <p><strong>üìû Phone:</strong> <a href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a></p>
            {% endif %}

            {% if block.settings.email != blank %}
              <p><strong>‚úâÔ∏è Email:</strong> <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a></p>
            {% endif %}

            {% if block.settings.hours != blank %}
              <p><strong>üïí Hours:</strong><br>{{ block.settings.hours | newline_to_br }}</p>
            {% endif %}

            {% if block.settings.services != blank %}
              <p><strong>üîß Services:</strong><br>{{ block.settings.services | newline_to_br }}</p>
            {% endif %}

            {% if block.settings.latitude != blank and block.settings.longitude != blank %}
              <a href="https://maps.google.com/maps?daddr={{ block.settings.latitude }},{{ block.settings.longitude }}" 
                 target="_blank" class="btn btn--small">Get Directions</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Store Locations List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "All Locations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Find the Godspeed store nearest to you"
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Store Location",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Store Name",
          "default": "Godspeed Store"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Featured Location",
          "default": false
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "Street Address\nCity, ZIP Code"
        },
        {
          "type": "tel",
          "id": "phone",
          "label": "Phone Number"
        },
        {
          "type": "email",
          "id": "email",
          "label": "Email Address"
        },
        {
          "type": "textarea",
          "id": "hours",
          "label": "Opening Hours",
          "default": "Monday - Friday: 9:00 - 18:00\nSaturday: 9:00 - 17:00\nSunday: Closed"
        },
        {
          "type": "textarea",
          "id": "services",
          "label": "Available Services",
          "default": "Sales, Service, Test Rides"
        },
        {
          "type": "text",
          "id": "latitude",
          "label": "Latitude",
          "info": "For directions link"
        },
        {
          "type": "text",
          "id": "longitude",
          "label": "Longitude",
          "info": "For directions link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Store Locations List",
      "category": "Store Information",
      "blocks": [
        {
          "type": "location"
        }
      ]
    }
  ]
}
{% endschema %}