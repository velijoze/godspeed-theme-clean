{% comment %}
  Section: About Timeline
  Company timeline and milestones
{% endcomment %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="rte">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="grid">
    <div class="grid__item large--eight-tenths push--large--one-tenth">
      {% for block in section.blocks %}
        <div class="grid" {{ block.shopify_attributes }} style="margin-bottom: 2rem; position: relative;">
          <div class="grid__item small--two-tenths" style="text-align: center;">
            {% if block.settings.year != blank %}
              <div class="label" style="font-size: 1.2rem; font-weight: 600; margin-bottom: 0.5rem;">{{ block.settings.year }}</div>
            {% endif %}
            <div style="width: 20px; height: 20px; background: #333; border-radius: 50%; margin: 0 auto;"></div>
          </div>
          <div class="grid__item small--eight-tenths">
            {% if block.settings.title != blank %}
              <h3 class="h4">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Timeline",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Journey"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Key milestones in our story"
    }
  ],
  "blocks": [
    {
      "type": "milestone",
      "name": "Milestone",
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "2015"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Company Founded"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Started with a passion for sustainable transportation in Switzerland."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Timeline",
      "category": "About",
      "blocks": [
        {
          "type": "milestone",
          "settings": {
            "year": "2015",
            "title": "Company Founded",
            "description": "Started with a passion for sustainable transportation in Switzerland."
          }
        },
        {
          "type": "milestone",
          "settings": {
            "year": "2018",
            "title": "First Retail Store",
            "description": "Opened our first physical location in Zurich to better serve our customers."
          }
        },
        {
          "type": "milestone",
          "settings": {
            "year": "2021",
            "title": "Expansion Across Switzerland",
            "description": "Grew to multiple locations throughout Switzerland with expert service teams."
          }
        },
        {
          "type": "milestone",
          "settings": {
            "year": "2025",
            "title": "Leading E-Bike Retailer",
            "description": "Proud to be Switzerland's trusted partner for sustainable mobility solutions."
          }
        }
      ]
    }
  ]
}
{% endschema %}