            <circle cx="24" cy="28" r="2" fill="#87CEEB"/>
          </svg>
        </div>
        <h3 class="banner-title">{{ section.settings.shipping_title | default: 'WORLDWIDE SHIPPING' }}</h3>
        <p class="banner-description">{{ section.settings.shipping_description | default: 'Ship anywhere, rates available at checkout.' }}</p>
      </div>
      
      <!-- 24/7 SUPPORT -->
      <div class="banner-column">
        <div class="banner-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M24 4C12.95 4 4 12.95 4 24C4 35.05 12.95 44 24 44C35.05 44 44 35.05 44 24C44 12.95 35.05 4 24 4ZM24 40C15.18 40 8 32.82 8 24C8 15.18 15.18 8 24 8C32.82 8 40 15.18 40 24C40 32.82 32.82 40 24 40Z" fill="#98FB98"/>
            <path d="M24 12C17.37 12 12 17.37 12 24C12 30.63 17.37 36 24 36C30.63 36 36 30.63 36 24C36 17.37 30.63 12 24 12ZM24 32C19.59 32 16 28.41 16 24C16 19.59 19.59 16 24 16C28.41 16 32 19.59 32 24C32 28.41 28.41 32 24 32Z" fill="#98FB98"/>
            <path d="M24 20C21.79 20 20 21.79 20 24C20 26.21 21.79 28 24 28C26.21 28 28 26.21 28 24C28 21.79 26.21 20 24 20ZM24 26C22.9 26 22 25.1 22 24C22 22.9 22.9 22 24 22C25.1 22 26 22.9 26 24C26 25.1 25.1 26 24 26Z" fill="#98FB98"/>
            <circle cx="24" cy="24" r="2" fill="#98FB98"/>
          </svg>
        </div>
        <h3 class="banner-title">{{ section.settings.support_title | default: '24/7 SUPPORT' }}</h3>
        <p class="banner-description">{{ section.settings.support_description | default: 'Call us anytime at 1(800) 555-1234.' }}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .banner-section {
    padding: 3rem 0;
    background: #f8f9fa;
  }
  
  .banner-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items: start;
  }
  
  .banner-column {
    text-align: center;
    padding: 1rem;
  }
  
  .banner-icon {
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
  }
  
  .banner-icon svg {
    width: 48px;
    height: 48px;
  }
  
  .banner-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #2c2c2c;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .banner-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.4;
    margin: 0;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .banner-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .banner-column {
      padding: 0.5rem;
    }
    
    .banner-title {
      font-size: 1rem;
    }
    
    .banner-description {
      font-size: 0.85rem;
    }
  }
  
  @media (max-width: 480px) {
    .banner-section {
      padding: 2rem 0;
    }
    
    .banner-grid {
      gap: 1rem;
    }
  }
</style>

