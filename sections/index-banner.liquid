<section class="section-spacing" data-section-id="{{ section.id }}" data-section-type="banner">
  <div class="page-width">
    <div class="grid grid-uniform">
      <!-- FREE RETURNS -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div style="margin-bottom: 1rem; color: {{ settings.colorPrimary }};">
            üîÅ
          </div>
          <h3 class="h4">{{ section.settings.returns_title | default: 'FREE RETURNS' }}</h3>
          <p>{{ section.settings.returns_description | default: 'Returns within 30 days receive a full refund.' }}</p>
        </div>
      </div>
      
      <!-- WORLDWIDE SHIPPING -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div style="margin-bottom: 1rem; color: {{ settings.colorPrimary }};">
            üöö
          </div>
          <h3 class="h4">{{ section.settings.shipping_title | default: 'WORLDWIDE SHIPPING' }}</h3>
          <p>{{ section.settings.shipping_description | default: 'Ship anywhere, rates available at checkout.' }}</p>
        </div>
      </div>
      
      <!-- 24/7 SUPPORT -->
      <div class="grid__item large--one-third medium--one-half">
        <div class="feature-card text-center">
          <div style="margin-bottom: 1rem; color: {{ settings.colorPrimary }};">
            üìû
          </div>
          <h3 class="h4">{{ section.settings.support_title | default: '24/7 SUPPORT' }}</h3>
          <p>{{ section.settings.support_description | default: 'Call us anytime at 1(800) 555-1234.' }}</p>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "header",
      "content": "Returns Settings"
    },
    {
      "type": "text",
      "id": "returns_title",
      "label": "Returns Title",
      "default": "FREE RETURNS"
    },
    {
      "type": "text",
      "id": "returns_description",
      "label": "Returns Description",
      "default": "Returns within 30 days receive a full refund."
    },
    {
      "type": "header",
      "content": "Shipping Settings"
    },
    {
      "type": "text",
      "id": "shipping_title",
      "label": "Shipping Title",
      "default": "WORLDWIDE SHIPPING"
    },
    {
      "type": "text",
      "id": "shipping_description",
      "label": "Shipping Description",
      "default": "Ship anywhere, rates available at checkout."
    },
    {
      "type": "header",
      "content": "Support Settings"
    },
    {
      "type": "text",
      "id": "support_title",
      "label": "Support Title",
      "default": "24/7 SUPPORT"
    },
    {
      "type": "text",
      "id": "support_description",
      "label": "Support Description",
      "default": "Call us anytime at 1(800) 555-1234."
    }
  ],
  "presets": [
    {
      "name": "Banner Section",
      "category": "Content"
    }
  ]
}
{% endschema %}
