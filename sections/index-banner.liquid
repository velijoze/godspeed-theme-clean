<div class="banner-section" data-section-id="{{ section.id }}" data-section-type="banner">
  <div class="wrapper">
    <div class="banner-grid">
      <!-- FREE RETURNS -->
      <div class="banner-column">
        <div class="banner-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M24 4C12.95 4 4 12.95 4 24C4 35.05 12.95 44 24 44C35.05 44 44 35.05 44 24C44 12.95 35.05 4 24 4ZM24 40C15.18 40 8 32.82 8 24C8 15.18 15.18 8 24 8C32.82 8 40 15.18 40 24C40 32.82 32.82 40 24 40Z" fill="#FFA07A"/>
            <path d="M32 16L24 24L16 16L14 18L24 28L34 18L32 16Z" fill="#FFA07A"/>
            <path d="M24 28C22.9 28 22 27.1 22 26C22 24.9 22.9 24 24 24C25.1 24 26 24.9 26 26C26 27.1 25.1 28 24 28Z" fill="#FFA07A"/>
          </svg>
        </div>
        <h3 class="banner-title">{{ section.settings.returns_title | default: 'FREE RETURNS' }}</h3>
        <p class="banner-description">{{ section.settings.returns_description | default: 'Returns within 30 days receive a full refund.' }}</p>
      </div>
      
      <!-- WORLDWIDE SHIPPING -->
      <div class="banner-column">
        <div class="banner-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M40 16H32V8C32 5.79 30.21 4 28 4H20C17.79 4 16 5.79 16 8V16H8C5.79 16 4 17.79 4 20V36C4 38.21 5.79 40 8 40H40C42.21 40 44 38.21 44 36V20C44 17.79 42.21 16 40 16ZM20 8H28V16H20V8ZM40 36H8V20H40V36Z" fill="#87CEEB"/>
