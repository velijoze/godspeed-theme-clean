{% comment %}
  Team Members Section
  Displays team photos, names, titles, and bios in a professional grid
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <header class="section-header text-center">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p>{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div class="grid grid-uniform">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'team_member' %}
            <div class="grid__item large--one-third medium--one-half" {{ block.shopify_attributes }}>
              <div class="feature-card text-center">
                {% if block.settings.photo %}
                  <div class="team-member-photo">
                    <img 
                      src="{{ block.settings.photo | img_url: '300x300', crop: 'center' }}"
                      alt="{{ block.settings.name }}"
                      loading="lazy"
                    >
                  </div>
                {% endif %}
                
                <h3 class="h4">{{ block.settings.name }}</h3>
                
                {% if block.settings.title != blank %}
                  <p><strong>{{ block.settings.title }}</strong></p>
                {% endif %}
                
                {% if block.settings.bio != blank %}
                  <div class="rte">{{ block.settings.bio }}</div>
                {% endif %}
                
                {% if block.settings.social_links != blank %}
                  <div class="team-social-links">
                    {% assign social_links = block.settings.social_links | split: ',' %}
                    {% for link in social_links %}
                      {% assign link_parts = link | split: '|' %}
                      {% if link_parts.size == 2 %}
                        <a href="{{ link_parts[1] | strip }}" target="_blank" rel="noopener" class="btn btn--small team-social-btn">
                          {{ link_parts[0] | strip }}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      <div class="text-center">
        <p><em>No team members added yet. Add team member blocks in the theme customizer.</em></p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Team Members",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Meet Our Team"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "The passionate people behind our success"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Team Member Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member Name"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Job Title",
          "default": "Job Title"
        },
        {
          "type": "textarea",
          "id": "bio",
          "label": "Short Bio",
          "default": "A brief description of the team member's role and expertise."
        },
        {
          "type": "textarea",
          "id": "social_links",
          "label": "Social Links (format: LinkedIn|https://linkedin.com/in/username, Twitter|https://twitter.com/username)",
          "info": "Enter social links in format: Platform|URL, separated by commas"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Members",
      "category": "Content",
      "blocks": [
        {
          "type": "team_member"
        }
      ]
    }
  ]
}
{% endschema %}