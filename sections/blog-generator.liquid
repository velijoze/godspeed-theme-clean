{% comment %}
  Section: Blog Generator
  AI-powered blog content generation
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    <header class="section-header text-center">
      {% if section.settings.title != blank %}
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </header>

    <div id="blog-generator-{{ section.id }}" class="feature-card">
      <!-- Blog generator will be initialized here by JavaScript -->
      <div class="text-center">
        <p><em>Loading blog generator...</em></p>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.GodspeedToolkit && window.GodspeedToolkit.BlogGenerator) {
      const generator = new window.GodspeedToolkit.BlogGenerator();
      generator.init('blog-generator-{{ section.id }}');
    }
  });
</script>


{% schema %}
{
  "name": "Blog Generator",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Content Generator"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Generate AI-powered blog content for your e-bike store"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Blog Generator",
      "category": "E-bike Tools"
    }
  ]
}
{% endschema %}