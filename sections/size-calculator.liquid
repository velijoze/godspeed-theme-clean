{% comment %}
  Section: Size Calculator
  E-bike size recommendation tool
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    <header class="section-header text-center">
      {% if section.settings.title != blank %}
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </header>

    <div id="size-calculator-{{ section.id }}" class="feature-card">
      <!-- Size calculator will be initialized here by JavaScript -->
      <div class="text-center">
        <p><em>Loading size calculator...</em></p>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.GodspeedToolkit && window.GodspeedToolkit.SizeCalculator) {
      const calculator = new window.GodspeedToolkit.SizeCalculator();
      calculator.init('size-calculator-{{ section.id }}');
    }
  });
</script>


{% schema %}
{
  "name": "Size Calculator",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Find Your Perfect E-Bike Size"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Enter your measurements to get personalized e-bike size recommendations"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Size Calculator",
      "category": "E-bike Tools"
    }
  ]
}
{% endschema %}