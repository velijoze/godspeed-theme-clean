{% comment %}
  Section: Financing FAQ
  Frequently asked questions about financing options
{% endcomment %}

<section class="section-spacing">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <header class="section-header text-center">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div class="rte">
      {% for block in section.blocks %}
        <div class="faq-item" {{ block.shopify_attributes }}>
          {% if block.settings.question != blank %}
            <h4>{{ block.settings.question }}</h4>
          {% endif %}
          
          {% if block.settings.answer != blank %}
            <p>{{ block.settings.answer }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_contact %}
      <div class="text-center">
        <h3>{{ section.settings.contact_title | default: "Still have questions?" }}</h3>
        <p>{{ section.settings.contact_text | default: "Our financing experts are here to help" }}</p>
        
        {% if section.settings.phone != blank %}
          <p><strong>Call us:</strong> <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></p>
        {% endif %}
        
        {% if section.settings.email != blank %}
          <p><strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Financing FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Financing FAQs"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Common questions about our 0% financing options"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Show contact information",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Title",
      "default": "Still have questions?"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "Our financing experts are here to help"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+41 44 123 45 67"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "financing@godspeed.ch"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is 0% financing?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "With 0% financing through HeyLight, you pay no interest on your e-bike purchase when you split the cost over 6-36 months."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Financing FAQ",
      "category": "Financing",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "What is 0% financing?",
            "answer": "With 0% financing through HeyLight, you pay no interest on your e-bike purchase when you split the cost over 6-36 months."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "How do I apply for financing?",
            "answer": "Simply select HeyLight at checkout or ask our staff in-store. The application takes just minutes and approval is instant."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "What are the requirements?",
            "answer": "You must be 18+, have a Swiss address, and meet HeyLight's basic credit requirements. No down payment required."
          }
        }
      ]
    }
  ]
}
{% endschema %}