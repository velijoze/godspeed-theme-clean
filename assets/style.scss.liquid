  margin-bottom: 0;
  display: block;
}
.header-search__wrapper{
  position: absolute;
  top: -3px;
  right: ($gutter / 2);
  @include at-query ($min, $small) {
    right: $gutter;
  }
}


.header-search {
  text-align: right;
  background-color: transparent;
  .search-bar{
    position: relative;
    z-index: 100;
    height: $infoBarHeight + 6px;
    color: $colorInfoBg;
    font-size: 16px;
    padding: 0 25px 0 0;
    text-align: right;
    border: none;
    margin-bottom: 0;
