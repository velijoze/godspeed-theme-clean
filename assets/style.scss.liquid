    border-radius: 0px;
    width: 5px;
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    &:focus,
    &:active{
      @include at-query ($min, $small) {
        width: 250px;
      }
      @include at-query ($max, $small) {
        width: $small;
      }
