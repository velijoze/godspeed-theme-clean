==============================================================================*/
.rte {
  margin-bottom: $gutter / 2;
  font-family: $bodyFontStack;
  line-height: 1.6;
  color: $colorTextBody;
  
  // Force styling to override any conflicts
  * {
    box-sizing: border-box;
  }
  
  // Professional Typography Scale
  h1, h2, h3, h4, h5, h6 {
    font-family: $titleFontStack;
    font-weight: 600;
    line-height: 1.2;
    margin-top: 2em;
    margin-bottom: 0.8em;
    color: darken($colorTextBody, 15%);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    
    &:first-child {
      margin-top: 0;
    }
  }
  
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }
  
  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
  }
  
  h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.7rem;
  }
  
  h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.6rem;
  }
  
  h5 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  h6 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  // Professional Paragraph Styling
  p {
    margin-bottom: 1.2em;
    font-size: 1rem;
    line-height: 1.7;
    color: $colorTextBody;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
  
  // Professional List Styling
  ul, ol {
    margin: 1.5em 0 1.5em 2.5em;
    padding: 0;
  }
  
  ul {
    list-style: none;
    
    li {
      position: relative;
      margin-bottom: 0.8em;
      line-height: 1.6;
      padding-left: 1.5em;
      
      &:before {
        content: "•";
        position: absolute;
        left: 0;
        top: 0;
        color: $colorPrimary;
        font-weight: bold;
        font-size: 1.2em;
      }
    }
  }
  
  ol {
    counter-reset: item;
    
    li {
      position: relative;
      margin-bottom: 0.8em;
      line-height: 1.6;
      padding-left: 2.5em;
      counter-increment: item;
      
      &:before {
        content: counter(item) ".";
        position: absolute;
        left: 0;
        top: 0;
        color: $colorPrimary;
        font-weight: 600;
        font-size: 0.9em;
      }
    }
  }
  
  // Nested Lists
  ul ul, ol ul {
    margin: 0.8em 0 0.8em 1.5em;
    
    li:before {
      content: "◦";
      color: lighten($colorPrimary, 20%);
    }
  }
  
  ol ol, ul ol {
    margin: 0.8em 0 0.8em 1.5em;
    
    li:before {
      content: counter(item, lower-alpha) ".";
      color: lighten($colorPrimary, 20%);
    }
  }
  
  // Professional Table Styling
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 2em 0;
    font-size: 0.95rem;
    
    th, td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid lighten($colorBorder, 10%);
      vertical-align: top;
    }
    
    th {
      background-color: lighten($colorBody, 3%);
      font-weight: 600;
      color: darken($colorTextBody, 20%);
      font-family: $titleFontStack;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 0.85rem;
    }
    
    td {
      color: $colorTextBody;
      line-height: 1.5;
    }
    
    tr:hover {
      background-color: lighten($colorBody, 1%);
    }
    
    // Responsive tables
    @include at-query($max, $small) {
      display: block;
      overflow-x: auto;
      white-space: nowrap;
      
      th, td {
        min-width: 120px;
      }
    }
  }
  
  // Professional Blockquote Styling
  blockquote {
    margin: 2em 0;
    padding: 1.5em 2em;
    border-left: 4px solid $colorPrimary;
    background-color: lighten($colorBody, 2%);
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.6;
    color: darken($colorTextBody, 10%);
    
    p {
      margin: 0;
      
      &:last-child {
        margin-bottom: 0;
      }
    }
    
    cite {
      display: block;
      margin-top: 1em;
      font-size: 0.9rem;
      color: lighten($colorTextBody, 20%);
      font-style: normal;
      
      &:before {
        content: "— ";
      }
    }
  }
  
  // Professional Code Styling
  code {
    background-color: lighten($colorBody, 5%);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.9em;
    color: darken($colorPrimary, 20%);
  }
  
  pre {
    background-color: lighten($colorBody, 5%);
    padding: 1.5em;
    border-radius: 6px;
    overflow-x: auto;
    margin: 2em 0;
    border: 1px solid lighten($colorBorder, 10%);
    
    code {
      background: none;
      padding: 0;
      color: $colorTextBody;
    }
  }
  
  // Professional Link Styling
  a {
    color: $colorPrimary;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
    
    &:hover {
      color: darken($colorPrimary, 15%);
      border-bottom-color: currentColor;
    }
    
    &:focus {
      outline: 2px solid $colorPrimary;
      outline-offset: 2px;
    }
  }
  
  // Professional Image Styling
