{% comment %}
  Template: Team Page
  This template displays team members and company culture
{% endcomment %}

<div class="page-width">
  <header class="section-header">
    <h1 class="section-header__title">{{ page.title }}</h1>
  </header>

  {% if page.content != blank %}
    <div class="rte">
      {{ page.content }}
    </div>
  {% endif %}

  {% section 'team-members' %}
  {% section 'team-culture' %}
</div>