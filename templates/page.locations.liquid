{% comment %}
  Template: Locations Page
  This template displays store locations with maps
{% endcomment %}

<div class="page-width">
  <header class="section-header">
    <h1 class="section-header__title">{{ page.title }}</h1>
  </header>

  {% if page.content != blank %}
    <div class="rte">
      {{ page.content }}
    </div>
  {% endif %}

  {% section 'store-locations-map' %}
  {% section 'store-locations-list' %}
</div>