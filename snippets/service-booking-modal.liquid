{% comment %}
  Service Booking Modal Popup
  Usage: {% include 'service-booking-modal' %}
{% endcomment %}

<div id="service-booking-modal" class="modal" style="display: none;">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Schedule E-Bike Service</h3>
      <button class="modal-close" onclick="closeServiceBookingModal()">&times;</button>
    </div>
    
    <div class="modal-body">
      {% form 'contact', id: 'service-booking-form' %}
        <input type="hidden" name="contact[subject]" value="Service Booking Request">
        
        {% if form.posted_successfully? %}
          <div class="note form-success">
            <h4>Booking Request Sent!</h4>
            <p>We'll contact you within 24 hours to confirm your service appointment.</p>
          </div>
        {% endif %}
        
        {{ form.errors | default_errors }}
        
        <div class="grid">
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServiceName">Name <span class="required">*</span></label>
              <input type="text" id="ServiceName" name="contact[name]" required class="input-full">
            </div>
          </div>
          
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServiceEmail">Email <span class="required">*</span></label>
              <input type="email" id="ServiceEmail" name="contact[email]" required class="input-full">
            </div>
          </div>
        </div>
        
        <div class="grid">
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServicePhone">Phone Number</label>
              <input type="tel" id="ServicePhone" name="contact[phone]" class="input-full">
            </div>
          </div>
          
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServiceBikeModel">E-Bike Model</label>
              <input type="text" id="ServiceBikeModel" name="contact[bike_model]" class="input-full" placeholder="e.g., Cube Touring Hybrid">
            </div>
          </div>
        </div>
        
        <div class="grid">
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServicePackage">Service Package <span class="required">*</span></label>
              <select id="ServicePackage" name="contact[service_package]" required class="input-full">
                <option value="">Select Service Package</option>
                <option value="basic">Basic Service (CHF 89) - Safety check, brake adjustment</option>
                <option value="standard">Standard Service (CHF 149) - Full tune-up, battery check</option>
                <option value="premium">Premium Service (CHF 249) - Complete overhaul, software update</option>
                <option value="repair">Repair Service - Quote needed</option>
              </select>
            </div>
          </div>
          
          <div class="grid__item large--one-half">
            <div class="form-field">
              <label for="ServiceDate">Preferred Date</label>
              <input type="date" id="ServiceDate" name="contact[preferred_date]" class="input-full" min="{{ 'now' | date: '%Y-%m-%d' }}">
            </div>
          </div>
        </div>
        
        <div class="form-field">
          <label for="ServiceLocation">Preferred Location</label>
          <select id="ServiceLocation" name="contact[location]" class="input-full">
            <option value="">Select Location</option>
            <option value="zurich">Zurich Store</option>
            <option value="basel">Basel Store</option>
            <option value="bern">Bern Store</option>
            <option value="geneva">Geneva Store</option>
            <option value="pickup">Pickup & Delivery Service (+CHF 50)</option>
          </select>
        </div>
        
        <div class="form-field">
          <label for="ServiceNotes">Additional Notes</label>
          <textarea id="ServiceNotes" name="contact[notes]" rows="3" class="input-full" placeholder="Describe any specific issues or requests..."></textarea>
        </div>
        
        <div class="form-field">
          <label class="checkbox-label">
            <input type="checkbox" name="contact[newsletter]" value="yes">
            <span class="checkmark"></span>
            Send me service reminders and maintenance tips
          </label>
        </div>
        
        <div class="form-field text-center">
          <button type="submit" class="btn btn--large">Request Service Booking</button>
          <button type="button" class="btn btn--secondary" onclick="closeServiceBookingModal()">Cancel</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>

<style>
.modal {
  position: fixed;
  z-index: 10000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: white;
  padding: 0;
  border-radius: 8px;
  width: 90%;
  max-width: 600px;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
}

.modal-header {
  padding: 20px;
  border-bottom: 1px solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header h3 {
  margin: 0;
  font-size: 1.5rem;
}

.modal-close {
  background: none;
  border: none;
  font-size: 2rem;
  cursor: pointer;
  color: #666;
  padding: 0;
  line-height: 1;
}

.modal-close:hover {
  color: #333;
}

.modal-body {
  padding: 20px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  cursor: pointer;
  font-size: 0.9rem;
}

.checkbox-label input[type="checkbox"] {
  margin-right: 8px;
}

.btn--secondary {
  background: #f5f5f5;
  color: #333;
  margin-left: 10px;
}

.btn--secondary:hover {
  background: #e9e9e9;
}

@media (max-width: 768px) {
  .modal-content {
    width: 95%;
    margin: 20px;
  }
  
  .modal-header {
    padding: 15px;
  }
  
  .modal-body {
    padding: 15px;
  }
}
</style>

<script>
function openServiceBookingModal() {
  document.getElementById('service-booking-modal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function closeServiceBookingModal() {
  document.getElementById('service-booking-modal').style.display = 'none';
  document.body.style.overflow = '';
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
  const modal = document.getElementById('service-booking-modal');
  if (event.target === modal) {
    closeServiceBookingModal();
  }
});

// Close modal with Escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeServiceBookingModal();
  }
});
</script>