<!-- Comparison tool specific styles -->
<style>
  .ebike-comparison-wrapper {
    margin: 2rem 0;
    width: 100%;
  }
  
  /* Loading placeholder styles */
  .ebike-loading-placeholder {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid #e5e7eb;
  }
  
  .placeholder-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .placeholder-header h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0 0 0.5rem 0;
  }
  
  .placeholder-header p {
    color: #6b7280;
    margin: 0;
  }
  
  .placeholder-selectors {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .placeholder-selector {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .placeholder-label {
    font-weight: 600;
    color: #374151;
    font-size: 0.875rem;
  }
  
  .placeholder-dropdown {
    height: 48px;
    background: linear-gradient(90deg, #e5e7eb 25%, #f3f4f6 50%, #e5e7eb 75%);
    background-size: 200% 100%;
    animation: placeholder-shimmer 2s infinite;
    border-radius: 8px;
  }
  
  .placeholder-table {
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }
  
  .placeholder-table-header,
  .placeholder-table-row {
    display: grid;
    grid-template-columns: 150px repeat({{ comp_max_bikes }}, 1fr);
  }
  
  .placeholder-table-header {
    background: #f3f4f6;
  }
  
  .placeholder-table-row:nth-child(even) {
    background: #f9fafb;
  }
  
  .placeholder-cell {
    padding: 1rem;
    border-right: 1px solid #e5e7eb;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
  }
  
  .placeholder-table-header .placeholder-cell {
    font-weight: 600;
    color: #374151;
    background: #f3f4f6;
  }
  
  .placeholder-table-row .placeholder-cell {
    color: #6b7280;
    background: linear-gradient(90deg, transparent 0%, #e5e7eb 50%, transparent 100%);
    background-size: 200% 100%;
    animation: placeholder-shimmer 2s infinite;
    min-height: 20px;
  }
  
  @keyframes placeholder-shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
  
  /* Hide placeholder when toolkit loads */
  .ebike-comparison-tool + .ebike-loading-placeholder,
  .ebike-comparison-wrapper:has(.ebike-comparison-tool) .ebike-loading-placeholder {
    display: none;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .placeholder-selectors {
      grid-template-columns: 1fr;
    }
    
    .placeholder-table-header,
    .placeholder-table-row {
      grid-template-columns: 100px repeat({{ comp_max_bikes }}, 1fr);
    }
    
    .placeholder-cell {
      padding: 0.75rem 0.5rem;
      font-size: 0.75rem;
    }
  }
  
  @media (max-width: 480px) {
    .ebike-loading-placeholder {
      padding: 1rem;
    }
    
    .placeholder-table-header,
    .placeholder-table-row {
      grid-template-columns: 80px repeat({{ comp_max_bikes }}, 1fr);
    }
    
    .placeholder-cell {
      padding: 0.5rem 0.25rem;
      font-size: 0.7rem;
    }
  }
</style>

<!-- Initialize comparison tool when toolkit is ready -->
<script>
  document.addEventListener('ebike-toolkit:ready', function(event) {
    const toolkit = event.detail.toolkit;
    const comparisonModule = toolkit.getModule('comparison');
    
    if (comparisonModule) {
      // Find this specific comparison tool
      const element = document.querySelector('[data-comparison-id="{{ comp_id }}"]');
      if (element) {
        comparisonModule.bindElement(element);
      }
    }
  });
  
  // Fallback for immediate binding if toolkit is already loaded
  document.addEventListener('DOMContentLoaded', function() {
    if (window.EBikeToolkit && window.EBikeToolkit.initialized) {
      const comparisonModule = window.EBikeToolkit.getModule('comparison');
      if (comparisonModule) {
        const element = document.querySelector('[data-comparison-id="{{ comp_id }}"]');
        if (element) {
          comparisonModule.bindElement(element);
        }
      }
    }
  });
</script>

