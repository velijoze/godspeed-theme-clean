{% comment %}
  Godspeed E-Bike Comparison Tool - Enhanced Snippet
  Theme-agnostic enhanced bike comparison with AI insights
  
  Usage:
  {% render 'bike-comparison-tool', 
     title: 'E-Bike Comparison',
     subtitle: 'Detailed side-by-side analysis',
     max_bikes: 4
  %}
  
  Parameters:
  - title: Custom title for the comparison tool
  - subtitle: Custom subtitle/description
  - max_bikes: Maximum bikes to compare (2-6, default: 4)
  - show_specs: Show detailed specifications (default: true)
  - show_reviews: Show customer reviews (default: true)
  - show_availability: Show stock availability (default: true)
  - enable_filtering: Enable advanced filtering (default: true)
  - ai_insights: Enable AI-powered insights (default: false)
{% endcomment %}

{% liquid
  # Set defaults
  assign comp_title = title | default: 'E-Bike Comparison'
  assign comp_subtitle = subtitle | default: 'Detailed side-by-side analysis with AI insights'
  assign comp_max_bikes = max_bikes | default: 4
  assign comp_show_specs = show_specs | default: true
  assign comp_show_reviews = show_reviews | default: true
  assign comp_show_availability = show_availability | default: true
  assign comp_enable_filtering = enable_filtering | default: true
  assign comp_ai_insights = ai_insights | default: false
  
  # Generate unique ID for this instance
  assign comp_id = 'comp_' | append: section.id | default: 'default' | append: '_' | append: 'now' | date: '%s'
  
  # Validate max_bikes
  if comp_max_bikes < 2
    assign comp_max_bikes = 2
  elsif comp_max_bikes > 6
    assign comp_max_bikes = 6
  endif
%}

<!-- Bike Comparison Tool Container -->
<div class="ebike-comparison-wrapper" id="{{ comp_id }}-wrapper">
  <!-- Tool will be rendered here by JavaScript -->
  <div 
    data-ebike-tool="comparison"
    data-comparison-id="{{ comp_id }}"
    data-title="{{ comp_title | escape }}"
    data-subtitle="{{ comp_subtitle | escape }}"
    data-max-bikes="{{ comp_max_bikes }}"
    data-show-specs="{{ comp_show_specs }}"
    data-show-reviews="{{ comp_show_reviews }}"
    data-show-availability="{{ comp_show_availability }}"
    data-enable-filtering="{{ comp_enable_filtering }}"
    data-ai-insights="{{ comp_ai_insights }}"
    class="ebike-comparison-placeholder"
  >
    <!-- Loading placeholder -->
    <div class="ebike-loading-placeholder">
      <div class="placeholder-header">
        <h3>{{ comp_title }}</h3>
        <p>{{ comp_subtitle }}</p>
      </div>
      <div class="placeholder-selectors">
        {% for i in (1..comp_max_bikes) %}
          <div class="placeholder-selector">
            <div class="placeholder-label">Bike {{ i }}</div>
            <div class="placeholder-dropdown"></div>
          </div>
        {% endfor %}
      </div>
      <div class="placeholder-table">
        <div class="placeholder-table-header">
          <div class="placeholder-cell">Feature</div>
          {% for i in (1..comp_max_bikes) %}
            <div class="placeholder-cell">Bike {{ i }}</div>
          {% endfor %}
        </div>
        {% assign features = 'Price,Motor,Battery,Range,Weight' | split: ',' %}
        {% for feature in features %}
          <div class="placeholder-table-row">
            <div class="placeholder-cell">{{ feature }}</div>
            {% for i in (1..comp_max_bikes) %}
              <div class="placeholder-cell">-</div>
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

